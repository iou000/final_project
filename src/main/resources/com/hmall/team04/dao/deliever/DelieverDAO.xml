	<!-- USER의 배송지 리스트를 받아옴 -->
	<select id="selectDelieverListByUserId" parameterType="String" resultType="DelieverDTO">
		SELECT
			deliever_id, user_id, address_f, address_l, deliever_hp_no, receiver_nm, active_yn
		FROM  deliever_dt_t
		WHERE user_id = #{userId}
		ORDER BY active_yn DESC
	
	</select>
	
	
	
